{
  "compilerOptions": {
    "outDir": "./lib/esm",
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "isolatedModules": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/__stories__"]
}
